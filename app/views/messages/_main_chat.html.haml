.chatmain
  .chatmain__group--info
    .chatmain__group--info__top-items
      .chatmain__group--info__top-items--group
        = @group.name
      .chatmain__group--info__top-items--member
        Memberï¼š
        %ul.list
          - @group.users.each do |user|
            %li.gest= user.name
    .chatmain__group--info__top-items--edit
      = link_to edit_group_path(@group), class: "chatmain__group--info__top-items--edit top-items__edit--btn" do
        = "Edit"


  .chatmain__message--field
    = render @messages
  .chatmain__message--form
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form__contents
        = f.text_field :body, class: 'text', placeholder: 'type a message'
        = f.label :image, class: 'icon__set' do
          = icon('far', 'image', class: 'form__icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'btn'
