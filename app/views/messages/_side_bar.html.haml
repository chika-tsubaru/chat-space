.sidebar
  .sidebar__user--name
    .sidebar__user--name__top-items
      .sidebar__user--name__top-items__name
        = current_user.name
      .sidebar__user--name__top-items__icons
        = link_to new_group_path, class: "sidebar__user--name__top-items__btn top-items__btn--edit" do
          = icon('far', 'edit', class: "items__btn--icon")
        = link_to edit_user_path(current_user), class: "sidebar__user--name__top-items__btn top-items__btn--cog" do
          = icon('fas', 'cog', class: "items__btn--icon")
  .sidebar__group--list
    - current_user.groups.each do |group|
      .sidebar__group--list__top-items
        = link_to '#' do
          .sidebar__group--list__top-items__group-name
            = group.name
          .sidebar__group--list__top-items__group-info  
            まだメッセージがありません
